<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:layout_gravity="center_vertical"
            android:id="@+id/OrderAsSellerImageProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/image_placeholder" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/OrderAsSellerTxtName"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:text="Total Price "
                android:id="@+id/OrderAsSellerTxtTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Status"
                android:id="@+id/OrderAsSellerTxtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Buyer "
                android:id="@+id/OrderTxtBuyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Buyer ID "
                android:id="@+id/OrderTxtBuyerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageButton
                    app:tint="#F44336"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:id="@+id/OrderAsSellerButtonUpdateOrderStatus"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_update_order_status"
                    android:contentDescription="Update Order Status" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout >

</androidx.cardview.widget.CardView>